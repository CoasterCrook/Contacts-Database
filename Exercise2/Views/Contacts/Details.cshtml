@model Exercise2.Models.Contacts

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="/css/contacts.css">

<div>
    <h4>Contact Details</h4>

    <dl class="row">
        <hr />
        <dd class = "col-sm-2">
            Name:
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <hr />
        <dd class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName):
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <hr />
        <dd class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber):
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <hr />
        <dd class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email):
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <hr />
        <dd class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categories):
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categories.CategoryId)
        </dd>
        <hr />
        <dd class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Organization):
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Organization)
        </dd>
        <hr />
        <dd class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date):
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <hr />
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-dark">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-dark">Delete</a>
    <a asp-action="Index" class="btn btn-dark">Home</a>
</div>
<hr />